<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_estimate_tm31"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.is.agriculturalequipment.EstimateTM31">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/constraintLayout"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="110dp"
            app:srcCompat="@drawable/tm_31"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="32dp" />

        <TextView
            android:text="TM31 (Honda)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="375dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <TextView
                android:text="เครื่องยนต์"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtView"
                android:layout_weight="1"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/checkEngine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:text="สตาร์ทติด"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioBtnEngineTrue"
                    android:layout_weight="1"/>

                <RadioButton
                    android:text="สตาร์ทไม่ติด"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioBtnEngineFalse"
                    android:layout_weight="1"/>


            </RadioGroup>

            <RadioGroup
                android:id="@+id/no1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:text="สีตัวเครื่องโดยรวม(และตัวถัง)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtView1"
                    android:layout_weight="1"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioBtn1_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ทำสีใหม่" />

                <RadioButton
                    android:text="ไม่ทำสีใหม่"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioBtn1_2"
                    android:layout_weight="1" />

            </RadioGroup>

            <RadioGroup
                android:id="@+id/no2"
                android:layout_below="@+id/no1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="false"
                android:layout_centerHorizontal="false">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="หม้อลม"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioBtn2_1"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="เปลี่ยนใหม่"
                    android:checked="false">
                </RadioButton>

                <RadioButton
                    android:id="@+id/radioBtn2_2"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="ไม่เปลี่ยน"
                    android:checked="false">
                </RadioButton>
            </RadioGroup>

            <!--                No 2              -->

            <RadioGroup
                android:id="@+id/no3"
                android:layout_below="@+id/no2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="false"
                android:layout_centerHorizontal="false">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ตัวตั้งโปโล"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioBtn3_1"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="เปลี่ยนทั้งตัว"
                    android:checked="false">
                </RadioButton>

                <RadioButton
                    android:id="@+id/radioBtn3_2"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="เปลี่ยนเฉพาะตัวลิ้น"
                    android:checked="false">
                </RadioButton>

                <RadioButton
                    android:id="@+id/radioBtn3_3"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="ไม่เปลี่ยน"
                    android:checked="false">
                </RadioButton>

            </RadioGroup>

            <!--                No 3              -->

            <RadioGroup
                android:id="@+id/no4"
                android:layout_below="@+id/no3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="false"
                android:layout_centerHorizontal="false">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ท่อนดูด"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioBtn4_1"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="เปลี่ยนใหม่"
                    android:checked="false">
                </RadioButton>

                <RadioButton
                    android:id="@+id/radioBtn4_2"
                    android:layout_width = "wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ไม่เปลี่ยน"
                    android:checked="false">
                </RadioButton>

            </RadioGroup>

            <!--                No 4              -->

            <RadioGroup
                android:id="@+id/no5"
                android:layout_below="@+id/no4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="false"
                android:layout_centerHorizontal="false">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ท่อนส่ง"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioBtn5_1"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="เปลี่ยนใหม่"
                    android:checked="false">
                </RadioButton>

                <RadioButton
                    android:id="@+id/radioBtn5_2"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="ไม่เปลี่ยน"
                    android:checked="false">
                </RadioButton>

            </RadioGroup>

            <!--                No 5              -->

            <RadioGroup
                android:id="@+id/no6"
                android:layout_below="@+id/no5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="false"
                android:layout_centerHorizontal="false">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ก๊อกน้ำ"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioBtn6_1"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="เปลี่ยนใหม่"
                    android:checked="false">
                </RadioButton>

                <RadioButton
                    android:id="@+id/radioBtn6_2"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="ไม่เปลี่ยน"
                    android:checked="false">
                </RadioButton>

            </RadioGroup>

            <!--                No 6              -->

            <RadioGroup
                android:id="@+id/no7"
                android:layout_below="@+id/no6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="false"
                android:layout_centerHorizontal="false">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="มู่เล่ย์"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioBtn7_1"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="เปลี่ยน"
                    android:checked="false">
                </RadioButton>

                <RadioButton
                    android:id="@+id/radioBtn7_2"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="ไม่เปลี่ยน"
                    android:checked="false">
                </RadioButton>

            </RadioGroup>

            <!--                No 7              -->

            <RadioGroup
                android:id="@+id/no8"
                android:layout_below="@+id/no7"
                android:layout_height="wrap_content"
                android:layout_centerVertical="false"
                android:layout_centerHorizontal="false"
                android:layout_width="match_parent">

                <TextView
                    android:layout_height="match_parent"
                    android:text="เกย์วัดความดัน"
                    android:layout_width="match_parent"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioBtn8_1"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="เปลี่ยน"
                    android:checked="false">
                </RadioButton>

                <RadioButton
                    android:id="@+id/radioBtn8_2"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="ไม่เปลี่ยน"
                    android:checked="false">
                </RadioButton>

            </RadioGroup>

            <!--                No 8              -->

            <RadioGroup
                android:id="@+id/no9"
                android:layout_below="@+id/no8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="false"
                android:layout_centerHorizontal="false">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ลูกสูบ"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioBtn9_1"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="เปลี่ยน"
                    android:checked="false">
                </RadioButton>

                <RadioButton
                    android:id="@+id/radioBtn9_2"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="ไม่เปลี่ยน"
                    android:checked="false">
                </RadioButton>

            </RadioGroup>

            <!--                No 9              -->

            <RadioGroup
                android:id="@+id/no10"
                android:layout_below="@+id/no9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="false"
                android:layout_centerHorizontal="false">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ลูกยางชุด"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioBtn10_1"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="เปลี่ยน"
                    android:checked="false">
                </RadioButton>

                <RadioButton
                    android:id="@+id/radioBtn10_2"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="ไม่เปลี่ยน"
                    android:checked="false">
                </RadioButton>

            </RadioGroup>

            <!--                No 10              -->



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layoutNavigation"
                android:layout_marginRight="16dp">

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="intentSubmitEstimateGX160"
                    android:text="Submit" />

                <Button
                    android:text="Reset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnReset"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
