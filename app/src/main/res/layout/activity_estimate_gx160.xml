<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_estimate_gx160"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.is.agriculturalequipment.EstimateGX160">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/constraintLayout"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.56"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/gx_160"
            android:layout_marginLeft="32dp" />

        <TextView
            android:text="GX160 (Honda)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" />
    </android.support.constraint.ConstraintLayout>

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="375dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical"
            android:id="@+id/linearLayout1">


            <TextView
                android:text="เครื่องยนต์"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtView"
                android:layout_weight="1"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/checkEngine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:text="สตาร์ทติด"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioBtnEngineTrue"
                    android:layout_weight="1"/>

                <RadioButton
                    android:text="สตาร์ทไม่ติด"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioBtnEngineFalse"
                    android:layout_weight="1"/>


            </RadioGroup>

            <RadioGroup
                android:id="@+id/no1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:text="สีตัวเครื่องโดยรวม"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtView1"
                    android:layout_weight="1"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioBtn1_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ทำสีใหม่" />

                <RadioButton
                    android:text="ไม่ทำสีใหม่"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioBtn1_2"
                    android:layout_weight="1" />

            </RadioGroup>

            <RadioGroup
                android:id="@+id/no2"
                android:layout_below="@+id/no1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="false"
                android:layout_centerHorizontal="false">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ฝาถึงน้ำมันเบนซิน"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioBtn2_1"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="เปลี่ยนฝาถังน้ำมัน"
                    android:checked="false">
                </RadioButton>

                <RadioButton
                    android:id="@+id/radioBtn2_2"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="ไม่เปลี่ยนฝาถังน้ำมัน"
                    android:checked="false">
                </RadioButton>

            </RadioGroup>

            <!--                No 2              -->

            <RadioGroup
                android:id="@+id/no3"
                android:layout_below="@+id/no2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="false"
                android:layout_centerHorizontal="false">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ฝาถังน้ำมันเครื่อง"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioBtn3_1"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="เปลี่ยนฝาถังน้ำมันเครื่อง"
                    android:checked="false">
                </RadioButton>

                <RadioButton
                    android:id="@+id/radioBtn3_2"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="ไม่เปลี่ยนฝาถังน้ำมันเครื่อง"
                    android:checked="false">
                </RadioButton>

            </RadioGroup>

            <!--                No 3              -->

            <RadioGroup
                android:id="@+id/no4"
                android:layout_below="@+id/no3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="false"
                android:layout_centerHorizontal="false">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="จานกระตุกเครื่อง"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioBtn4_1"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="เปลี่ยนจานกระตุกทั้งชุด"
                    android:checked="false">
                </RadioButton>

                <RadioButton
                    android:id="@+id/radioBtn4_2"
                    android:layout_width = "wrap_content"
                    android:layout_height="wrap_content"
                    android:text="เปลี่ยนเฉพาะเชือกกระตุก"
                    android:checked="false">
                </RadioButton>

                <RadioButton
                    android:id="@+id/radioBtn4_3"
                    android:layout_width = "wrap_content"
                    android:layout_height="wrap_content"
                    android:text="เปลี่ยนเฉพาะเขี้ยวสตาร์ท "
                    android:checked="false">
                </RadioButton>

                <RadioButton
                    android:id="@+id/radioBtn4_4"
                    android:layout_width = "wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ไม่เปลี่ยนจานกระตุก"
                    android:checked="false">
                </RadioButton>

            </RadioGroup>

            <!--                No 4              -->

            <RadioGroup
                android:id="@+id/no5"
                android:layout_below="@+id/no4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="false"
                android:layout_centerHorizontal="false">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ท่อไอเสีย"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioBtn5_1"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="เปลี่ยนท่อไอเสีย"
                    android:checked="false">
                </RadioButton>

                <RadioButton
                    android:id="@+id/radioBtn5_2"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="ไม่เปลี่ยนท่อไอเสีย"
                    android:checked="false">
                </RadioButton>

            </RadioGroup>

            <!--                No 5              -->

            <RadioGroup
                android:id="@+id/no6"
                android:layout_below="@+id/no5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="false"
                android:layout_centerHorizontal="false">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ปลั๊กหัวเทียน"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioBtn6_1"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="เปลี่ยนปลั๊กหัวเทียน"
                    android:checked="false">
                </RadioButton>

                <RadioButton
                    android:id="@+id/radioBtn6_2"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="ไม่เปลี่ยนปลั๊กหัวเทียน"
                    android:checked="false">
                </RadioButton>

            </RadioGroup>

            <!--                No 6              -->

            <RadioGroup
                android:id="@+id/no7"
                android:layout_below="@+id/no6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="false"
                android:layout_centerHorizontal="false">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="คาร์บูเรเตอร์"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioBtn7_1"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="เปลี่ยนคาร์บูเรเตอร์"
                    android:checked="false">
                </RadioButton>

                <RadioButton
                    android:id="@+id/radioBtn7_2"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="ไม่เปลี่ยนคาร์บูเรเตอร์"
                    android:checked="false">
                </RadioButton>

            </RadioGroup>

            <!--                No 7              -->

            <RadioGroup
                android:id="@+id/no8"
                android:layout_below="@+id/no7"
                android:layout_height="wrap_content"
                android:layout_centerVertical="false"
                android:layout_centerHorizontal="false"
                android:layout_width="match_parent">

                <TextView
                    android:layout_height="match_parent"
                    android:text="CDI(เฉพาะในรุ่นที่มี CDI)"
                    android:layout_width="match_parent"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioBtn8_1"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="เปลี่ยนคอยล์"
                    android:checked="false">
                </RadioButton>

                <RadioButton
                    android:id="@+id/radioBtn8_2"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="ไม่เปลี่ยนคอยล์"
                    android:checked="false">
                </RadioButton>

            </RadioGroup>

            <!--                No 8              -->

            <RadioGroup
                android:id="@+id/no9"
                android:layout_below="@+id/no8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="false"
                android:layout_centerHorizontal="false">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ก๊อกน้ำมัน"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioBtn9_1"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="เปลี่ยนก๊อกน้ำมัน"
                    android:checked="false">
                </RadioButton>

                <RadioButton
                    android:id="@+id/radioBtn9_2"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="ไม่เปลี่ยนก๊อกน้ำมัน"
                    android:checked="false">
                </RadioButton>

            </RadioGroup>

            <!--                No 9              -->

            <RadioGroup
                android:id="@+id/no10"
                android:layout_below="@+id/no9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="false"
                android:layout_centerHorizontal="false">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="หม้อกรองอากาศ"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioBtn10_1"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="เปลี่ยนหม้อกรองทั้งลูก"
                    android:checked="false">
                </RadioButton>

                <RadioButton
                    android:id="@+id/radioBtn10_2"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="ไม่เปลี่ยนหม้อกรอง"
                    android:checked="false">
                </RadioButton>

            </RadioGroup>

            <!--                No 10              -->

            <RadioGroup
                android:id="@+id/no11"
                android:layout_below="@+id/no10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="false"
                android:layout_centerHorizontal="false">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="สวิตท์ปิด-เปิด"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radioBtn11_1"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="เปลี่ยนสวิตท์"
                    android:checked="false">
                </RadioButton>

                <RadioButton
                    android:id="@+id/radioBtn11_2"
                    android:layout_width = "match_parent"
                    android:layout_height="wrap_content"
                    android:text="ไม่เปลี่ยนสวิตท์"
                    android:checked="false">
                </RadioButton>

            </RadioGroup>

            <!--                No 11              -->



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layoutNavigation"
                android:layout_marginRight="16dp">

                <Button
                    android:text="Submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnSubmit"
                    android:layout_weight="1"
                    android:onClick="intentSubmitEstimateGX160"/>

                <Button
                    android:text="Reset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnReset"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
