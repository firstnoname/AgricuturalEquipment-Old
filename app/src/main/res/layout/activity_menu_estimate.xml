<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu_estimate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.is.agriculturalequipment.MenuEstimate">

    <Button
        android:text="ปั้มน้ำ G200"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnMenuG200"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="intentSelectEstimateG200"/>

    <Button
        android:text="ปั้มน้ำ GX160"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnMenuGX160"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btnMenuG200"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="intentSelectEstimateGX160"/>

    <Button
        android:text="เครื่องตัดหญ้า GX35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnMenuGX35"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btnMenuGX160"
        android:onClick="intentSelectEstimateGX35"/>

    <Button
        android:text="เครื่องตัดหญ้า T200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnMenuT200"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btnMenuGX35"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="intentSelectEstimateT200"/>

    <Button
        android:text="เครื่องพ่นยา TM31"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnMenuTM31"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btnMenuT200"
        android:onClick="intentSelectEstimateTM31"/>
</android.support.constraint.ConstraintLayout>
