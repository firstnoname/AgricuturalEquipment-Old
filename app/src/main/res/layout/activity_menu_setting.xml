<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu_estimate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.is.agriculturalequipment.MenuEstimate">

    <Button
        android:text="ปั้มน้ำ G200"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnSettingG200"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="intentSelectSettingG200"/>

    <Button
        android:text="ปั้มน้ำ GX160"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnSettingGX160"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btnSettingG200"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="intentSelectSettingGX160"/>

    <Button
        android:text="เครื่องตัดหญ้า GX35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSettingGX35"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btnSettingGX160"
        android:onClick="intentSelectSettingGX35"/>

    <Button
        android:text="เครื่องตัดหญ้า T200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSettingT200"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btnSettingGX35"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="intentSelectSettingT200"/>

    <Button
        android:text="เครื่องพ่นยา TM31"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnSettingTM31"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btnSettingT200"
        android:onClick="intentSelectSettingTM31"/>
</android.support.constraint.ConstraintLayout>
